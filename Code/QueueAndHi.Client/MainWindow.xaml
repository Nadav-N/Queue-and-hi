<Window x:Class="QueueAndHi.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:qa="clr-namespace:QueueAndHi.Client"
        xmlns:vms="clr-namespace:QueueAndHi.Client.ViewModels"
        Title="Queue &amp; Hi" WindowState="Maximized">
    <Window.Icon>
        <BitmapImage UriSource="Resources\virtual-queue.png" />
    </Window.Icon>
    <StackPanel x:Name="screen" Orientation="Vertical">
        <ContentControl Content="{Binding MainToolbarVM, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
        <ContentControl Content="{Binding MainMenuVM, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"  Margin="100,30,0,0"/>
        <qa:QuestionList Margin="0,40,0,0" DataContext="{Binding Questions, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
    </StackPanel>
</Window>
