<Window x:Class="QueueAndHi.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:qa="clr-namespace:QueueAndHi.Client"
        xmlns:vms="clr-namespace:QueueAndHi.Client.ViewModels"
        Title="Queue &amp; Hi" WindowState="Maximized">
    <Window.Icon>
        <BitmapImage UriSource="Resources\virtual-queue.png" />
    </Window.Icon>
    <StackPanel x:Name="screen" Orientation="Vertical">
        <ContentControl Content="{Binding MainToolbarVM, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
        <ContentControl Margin="100,30,0,0" Content="{Binding MainMenuVM, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
        <Grid Margin="20,40,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <ContentControl Content="{Binding NotificationsVM, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
            <ContentControl Grid.Column="1" Margin="0,0,100,0" Content="{Binding MainVM, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"/>
        </Grid>
    </StackPanel>
</Window>
